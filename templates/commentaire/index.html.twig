{% extends 'baseBack.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdComment</th>
                <th>Description</th>
                <th>Nom User</th>
                   <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.idComment }}</td>
                <td>{{ commentaire.description }}</td>
                <td>{{ commentaire.idUser.nom }}</td>
                                                <td>{{ commentaire.date ? commentaire.date|date('Y-m-d') : '' }}</td>

                <td>
                    <a href="{{ path('app_commentaire_show', {'idComment': commentaire.idComment}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'idComment': commentaire.idComment}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
